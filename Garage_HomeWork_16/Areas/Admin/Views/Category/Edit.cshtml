@using Garage_HomeWork_16.Models;
@model Category

<div class="card">
    <div class="card-body">
        <div class="card-title">Add Category</div>
        <hr>
        <form method="post" asp-action="edit" asp-controller="category" asp-area="admin">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" value="@Model.Title">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-light px-5">Save Changes</button>
            </div>
        </form>
    </div>
</div>