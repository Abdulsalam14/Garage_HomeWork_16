@using Garage_HomeWork_16.Models;
@model FeaturedWorkComponent

<div class="card">
    <div class="card-body">
        <h5 class="card-title">FeaturedWorkComponent</h5>
        @{
            if (Model != null)
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Title</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                <tr>
                                    <th>@Model.Id</th>
                                    <td>@Model.Title</td>
                                    <td>
                                        <a asp-action="update" asp-controller="featuredworkcomponent" asp-area="admin" asp-route-id="@Model.Id" class="btn btn-outline-warning">Update</a>
                                        <form method="post" asp-area="admin" asp-action="delete" asp-controller="featuredworkcomponent" style="display:inline">
                                            <button class="btn btn-outline-danger">Delete</button>
                                        </form>
                                        <a asp-action="details" asp-controller="featuredworkcomponent" asp-area="admin" asp-route-id="@Model.Id" class="btn btn-outline-info">Details</a>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class=" my-3">
                    <a asp-action="create" asp-controller="featuredworkcomponent" asp-area="admin" class="btn btn-outline-success">Add FeaturedWorkComponent</a>
                </div>
            }
        }
    </div>
</div>
