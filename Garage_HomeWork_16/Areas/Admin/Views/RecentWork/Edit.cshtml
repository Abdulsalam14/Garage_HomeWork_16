@using Garage_HomeWork_16.Models;
@model RecentWork

<div class="card">
    <div class="card-body">
        <div class="card-title">Edit Work</div>
        <hr>
        <form method="post" asp-action="edit" asp-controller="recentwork" asp-area="admin"  enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" placeholder="Enter Name">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Text"></label>
                <input asp-for="Text" class="form-control" placeholder="Enter Text">
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagePath" class="form-label"></label>
                <input type="text" class="form-control" readonly asp-for="ImagePath" />
                <span asp-validation-for="ImagePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="file" accept="image/*" name="workImage" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-light px-5">Submit</button>
                <button asp-action="index" asp-controller="recentwork" asp-area="admin" class="btn btn-danger px-5">Cancel</button>
            </div>
        </form>
    </div>
</div>


              