@using Garage_HomeWork_16.Models;
@model List<RecentWork>

<div class="card">
    <div class="card-body">
            <h5 class="card-title">Works</h5>
        <div class="d-flex">
            <div class="col-2">
                <a asp-action="create" asp-controller="recentwork" asp-area="admin" class="btn btn-outline-success">Create Work</a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Title</th>
                        <th scope="col">Text</th>
                        <th scope="col">ImagePath</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var recentWork in Model)
                    {
                        <tr>
                            <th>@recentWork.Id</th>
                            <td>@recentWork.Title</td>
                            <td>@recentWork.Text</td>
                            <td>
                                <img style="width: 100px" src="@recentWork.ImagePath">
                            </td>
                            <td>
                                <a class="btn btn-outline-warning text-white" asp-action="edit" asp-controller="recentwork" asp-area="admin" asp-route-id="@recentWork.Id">Edit</a>
                                <form method="post" asp-action="Delete" asp-controller="recentwork" asp-area="admin" asp-route-id="@recentWork.Id" style="display:inline">
                                    <button class="btn btn-outline-danger text-white" type="submit">Delete</button>
                                </form>
                                <a class="btn btn-outline-info text-white" asp-action="Details" asp-controller="recentwork" asp-area="admin" asp-route-id="@recentWork.Id">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>